/*-------------主题--------------*/
.banana_theme
  font_color('banana')
  background_color('banana')

.avocado_theme
  background_color('avocado')

.peach_theme
  background_color('peach')

.ink_theme
  font_color('ink')
  background_color('ink')

font_color($type)
  if $type == banana
    color #FFD200
  else if $type == ink
    color rgb(100, 145, 115)

background_color($type)
  if $type == banana
    background linear-gradient(to right, rgb(247, 151, 30), rgb(255, 210, 0))
  else if $type == avocado
    background linear-gradient(to right, rgb(86, 171, 47), rgb(168, 224, 99))
  else if $type == peach
    background #fff
  else if $type == ink
    background linear-gradient(to top, rgb(171, 186, 171), rgb(255, 255, 255))
$font_family = 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', 'Avenir', Helvetica, Arial, sans-serif

// 字体大小
$small_font_size = 12px
$medium_font_size = 14px
$normal_font_size = 16px
$big_font_size = 24px

// px
$container_width = 1200px

/* ===================================== mixin ===================================== */
// 清浮动
clearfix()
  &:after
    display block
    content "."
    height 0
    line-height 0
    clear both
    visibility hidden

// clearfix
.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

// 左浮动
.fl
  float left

// 右浮动
.fr
  float right


// 防文字溢出
.text_overflow
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

// 防文字溢出(多行)
multi_text_overflow($line = 3)
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp $line
  overflow hidden
  word-break break-all

// 禁止选中文字
disabled_select_text()
  user-select none

